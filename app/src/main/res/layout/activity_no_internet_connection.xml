<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ContentDescription"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundSecond"
    android:orientation="vertical"
    tools:context=".ActivitiesAndFragments.ActivitiesOfLog.NoInternetConnection">

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="@dimen/_200dp"
        android:layout_height="@dimen/_200dp"
        android:contentDescription="@string/try_again"
        android:src="@drawable/ic_broken_heart"
        app:layout_constraintBottom_toTopOf="@+id/no_connection_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:text="@string/no_internet"
        android:textColor="@color/colorPrimaryTexts"
        android:textSize="@dimen/_20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView18" />

    <TextView
        android:id="@+id/no_connection_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60dp"
        android:layout_marginBottom="@dimen/_8dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="@string/try_again"
        android:textColor="@color/colorTexts"
        android:textSize="@dimen/_16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>