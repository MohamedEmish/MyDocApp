<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ContentDescription,Autofill,KeyboardInaccessibleWidget"
    android:layout_width="match_parent"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/colorBackgroundSecond"
    android:fillViewport="true"
    android:gravity="center_horizontal"
    android:id="@+id/sign_in_root"
    android:orientation="vertical"
    android:padding="@dimen/_8dp"
    tools:context=".ActivitiesAndFragments.ActivitiesOfLog.SignInActivity">

    <LinearLayout
        android:id="@+id/sign_in_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorBackground"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="@dimen/_60dp">

        <ImageView
            android:layout_width="@dimen/_200dp"
            android:layout_height="@dimen/_100dp"
            android:layout_marginBottom="@dimen/_72dp"
            android:paddingTop="@dimen/_16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/login_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_24dp"
                android:layout_height="@dimen/_24dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerInside"
                android:src="@drawable/email" />

            <EditText
                android:id="@+id/sign_in_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingStart="@dimen/_8dp"
                android:paddingEnd="@dimen/_8dp"
                android:textColor="@color/colorAccent"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="@dimen/_12sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="@dimen/_8dp"
            android:layout_marginEnd="@dimen/_8dp"
            android:layout_marginBottom="@dimen/_8dp"
            android:background="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_24dp"
                android:layout_height="@dimen/_24dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerInside"
                android:src="@drawable/password" />

            <EditText
                android:id="@+id/sign_in_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingStart="@dimen/_8dp"
                android:paddingEnd="@dimen/_8dp"
                android:textColor="@color/colorAccent"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="@dimen/_12sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="@dimen/_8dp"
            android:layout_marginEnd="@dimen/_8dp"
            android:background="#000000" />

        <ImageView
            android:id="@+id/sign_in_eye"
            android:layout_width="@dimen/_24dp"
            android:layout_height="@dimen/_24dp"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/_8dp"
            android:paddingStart="@dimen/_16dp"
            android:paddingEnd="@dimen/_16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/eye_invisible" />

        <TextView
            android:id="@+id/forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/_8dp"
            android:layout_marginBottom="@dimen/_32dp"
            android:gravity="end"
            android:paddingTop="@dimen/_8dp"
            android:paddingBottom="@dimen/_18dp"
            android:text="@string/forgot_password"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_12sp" />

        <Button
            android:id="@+id/sign_in_button"
            android:layout_width="@dimen/_250dp"
            android:layout_height="@dimen/_36dp"
            android:layout_marginBottom="@dimen/_16dp"
            android:background="@drawable/border_sign_in"
            android:backgroundTint="@color/colorAccent"
            android:text="@string/sign_in"
            android:textColor="@color/colorBackground"
            android:textSize="@dimen/_12sp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.facebook.login.widget.LoginButton
                android:id="@+id/facebook_main_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <Button
                android:id="@+id/my_fb_login"
                android:layout_width="@dimen/_250dp"
                android:layout_height="@dimen/_36dp"
                android:background="@drawable/border_sign_in_with_facebook"
                android:backgroundTint="@color/colorBlue"
                android:drawableStart="@drawable/ic_facebook"
                android:paddingStart="@dimen/_24dp"
                android:paddingEnd="@dimen/_24dp"
                android:text="@string/fb_login"
                android:textColor="#ffffff"
                android:textSize="@dimen/_12sp" />
        </FrameLayout>


        <TextView
            android:id="@+id/create_new_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_18dp"
            android:paddingBottom="@dimen/_18dp"
            android:text="@string/create_new"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_12sp" />

        <TextView
            android:id="@+id/skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_8dp"
            android:paddingTop="@dimen/_8dp"
            android:paddingEnd="@dimen/_8dp"
            android:paddingBottom="@dimen/_18dp"
            android:text="@string/skip"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_12sp" />

    </LinearLayout>
</ScrollView>