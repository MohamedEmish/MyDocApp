<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:focusableInTouchMode="true"
    android:id="@+id/contact_us_root"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragments.MoreTabActivities.ContactUsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:background="@color/colorAccent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:textAllCaps="true">

        <ImageView
            android:id="@+id/contact_us_back"
            android:layout_width="@dimen/_50dp"
            android:layout_height="match_parent"
            android:padding="@dimen/_12dp"
            android:src="@drawable/ic_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50dp"
            android:background="@color/colorAccent"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="@string/contact_us"
            android:textAllCaps="true"
            android:textColor="@color/colorBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/_16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="@string/we_glad_to_listen"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_16sp" />

        <EditText
            android:id="@+id/contact_us_message_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150_5dp"
            android:layout_marginTop="@dimen/_8dp"
            android:background="@color/colorBackgroundSecond"
            android:gravity="top"
            android:hint="@string/message"
            android:inputType="textMultiLine"
            android:padding="@dimen/_2dp"
            android:scrollbars="vertical"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_12sp" />

        <Button
            android:id="@+id/contact_us_send_Button"
            android:layout_width="@dimen/_250dp"
            android:layout_height="@dimen/_36dp"
            android:layout_marginTop="@dimen/_16dp"
            android:layout_marginBottom="@dimen/_16dp"
            android:background="@drawable/border_sign_in"
            android:backgroundTint="@color/colorAccent"
            android:text="@string/send"
            android:textColor="#ffffff"
            android:textSize="@dimen/_12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="@dimen/_16dp"
            android:text="@string/follow_us"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="?android:listPreferredItemHeight"
            android:layout_marginBottom="@dimen/_32dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/contact_us_fb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fb" />

            <ImageView
                android:id="@+id/contact_us_tweeter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginEnd="@dimen/_16dp"
                android:src="@drawable/twitter" />

            <ImageView
                android:id="@+id/contact_us_instgram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/instgram" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/website2" />

            <TextView
                android:id="@+id/contact_us_web"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_4dp"
                android:text="@string/web_site"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_12sp" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>