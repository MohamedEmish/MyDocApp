<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/open_splash_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/colorAccent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".LogActivities.MainActivity">

    <ImageView
        android:id="@+id/open_splash_logo"
        android:layout_width="@dimen/_200dp"
        android:layout_height="@dimen/_100dp"
        android:layout_marginTop="@dimen/_100dp"
        android:src="@drawable/doctory2" />

    <TextView
        android:id="@+id/open_splash_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_36dp"
        android:gravity="center_horizontal"
        android:text="@string/open_msg"
        android:textColor="@color/colorBackground"
        android:textSize="@dimen/_20sp"
        android:visibility="gone" />


</LinearLayout>