<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/search_result_facility_root"
    android:focusableInTouchMode="true"
    android:background="@color/colorBackgroundSecond"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:layout_marginBottom="@dimen/_4dp"
        android:background="@color/colorAccent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:textAllCaps="true">

        <ImageView
            android:id="@+id/search_results_facility_back"
            android:layout_width="@dimen/_50dp"
            android:layout_height="match_parent"
            android:padding="@dimen/_12dp"
            android:src="@drawable/ic_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/facility_details_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/colorAccent"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="@string/health_facility"
            android:textAllCaps="true"
            android:textColor="@color/colorBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/search_result_facility_filter"
            app:layout_constraintStart_toEndOf="@+id/search_results_facility_back"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/search_result_facility_filter"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50dp"
            android:layout_marginEnd="@dimen/_8dp"
            android:background="@color/colorAccent"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center"
            android:paddingStart="@dimen/_16dp"
            android:paddingEnd="@dimen/_4dp"
            android:text="@string/filter"
            android:textAllCaps="false"
            android:textColor="@color/colorBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/facility_search_result_data_layout"
        android:visibility="visible"
        android:background="@color/colorBackgroundSecond"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40dp"
            android:layout_marginStart="@dimen/_4dp"
            android:layout_marginTop="@dimen/_4dp"
            android:layout_marginEnd="@dimen/_4dp"
            android:layout_marginBottom="@dimen/_4dp"
            android:background="@drawable/border_doctor_search"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_8dp"
            android:paddingEnd="@dimen/_8dp">

            <EditText
                android:id="@+id/search_facility_filter_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_4dp"
                android:layout_marginEnd="@dimen/_8dp"
                android:layout_weight="1"
                android:inputType="text"
                android:background="@null"
                android:hint="@string/search_for"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/_10sp" />

            <ImageView
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_20dp"
                android:layout_marginStart="@dimen/_8dp"
                android:src="@drawable/search2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/search_results_facility_no_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorBackgroundSecond"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/_150dp"
                    android:layout_height="@dimen/_150dp"
                    android:src="@drawable/facilities"
                    android:tint="@color/colorGray" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/no_facility"
                    android:textColor="@color/colorPrimaryTexts"
                    android:textSize="@dimen/_18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/facility_search_result_progress_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/colorBackgroundSecond"
                android:gravity="center"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/progress_animation_details"
                    android:layout_width="@dimen/_50dp"
                    android:layout_height="@dimen/_50dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/progress_animation" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/search_results_facility_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorBackgroundSecond"
                android:visibility="gone">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>