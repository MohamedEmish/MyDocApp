<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/speciality_small_item_layout"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/_8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/speciality_small_item_image"
        android:layout_width="@dimen/_65dp"
        android:layout_height="@dimen/_65dp"
        android:layout_gravity="center"
        android:src="@drawable/speciality"
        app:civ_border_color="@color/colorAccent"
        app:civ_border_width="@dimen/_2dp" />

    <TextView
        android:id="@+id/speciality_small_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/first_name"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/_14sp" />

</LinearLayout>